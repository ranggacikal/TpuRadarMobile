<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Jenazah :"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_nama_jenazah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Jenazah"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. KTP :"
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_noktp_jenazah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No KTP"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Meninggal :"
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_tanggalmeninggal_jenazah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Tanggal Meninggal"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btn_validasi_perpanjang_makam"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_blue"
                android:text="Validasi Perpanjang Makam"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>