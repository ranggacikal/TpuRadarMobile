<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".api.EditHapusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_edit_hapus_berita"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/edt_judul_edit_hapus_berita"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Judul Berita"
            android:inputType="text"/>

        <EditText
            android:id="@+id/edt_tanggal_edit_hapus_berita"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Tanggal Berita"
            android:text=""/>

        <EditText
            android:id="@+id/edt_isi_edit_hapus_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi Berita"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:lines="12"
            android:minLines="4"
            android:gravity="top|left"
            android:maxLines="11"
            android:scrollbars="vertical"/>

        <Button
            android:id="@+id/btn_edit_berita"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_blue"
            android:text="EDIT BERITA"
            android:textColor="#FFF"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_hapus_berita"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_red"
            android:text="HAPUS BERITA"
            android:textColor="#FFF"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>