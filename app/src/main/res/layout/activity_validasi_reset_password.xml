<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ValidasiResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@drawable/bg_black"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TPU Radar Kutabumi"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Validasi Reset Password"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan No. Telepon Anda :"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_no_telepon_resetpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:hint="No. Telepon"
            android:inputType="number"/>

        <Button
            android:id="@+id/btn_valid_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_red"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="Lanjutkan Ke Reset Password"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </LinearLayout>


</LinearLayout>